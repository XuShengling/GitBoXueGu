<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:background="@drawable/myinfo_login_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head_icon"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75sp"
            android:src="@drawable/default_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:text="@string/tv_user_name"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20sp"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/rl_course_history"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:background="#F7F8F8"
        android:gravity="center_vertical"
        android:paddingStart="10sp"
        android:paddingLeft="10sp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/iv_course_history_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/course_history_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_toEndOf="@+id/iv_course_history_icon"
            android:layout_toRightOf="@+id/iv_course_history_icon"
            android:text="@string/course_history_tv"
            android:textColor="#A3A3A3"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25sp"
            android:layout_marginRight="25sp"
            android:src="@drawable/iv_right_arrow"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:background="#F7F8F8"
        android:gravity="center_vertical"
        android:paddingStart="10sp"
        android:paddingLeft="10sp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/iv_user_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/myinfo_setting_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_toEndOf="@+id/iv_user_info_icon"
            android:layout_toRightOf="@+id/iv_user_info_icon"
            android:text="@string/course_history_tv"
            android:textColor="#A3A3A3"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25sp"
            android:layout_marginRight="25sp"
            android:src="@drawable/iv_right_arrow"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3" />
</LinearLayout>